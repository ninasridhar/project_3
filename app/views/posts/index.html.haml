%h1 Listing posts

.col-md-offset-1
  = search_form_for @q do |f|
    = f.label :title_cont
    = f.search_field :title_cont
    = f.label :category_name_cont
    = f.search_field :category_name_cont
    = f.submit

%div
  - @posts.each do |post|
    .row 
      .col-md-6.col-md-offset-3
        %h4= post.user.name
        %p= post.summary
        %div= link_to 'Show', post
        %div= link_to 'Edit', edit_post_path(post)
        %div= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Post', new_post_path
