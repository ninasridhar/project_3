<div class = " container row">
  <div class = "user_box col-md-3" >
    <img src="#" class = "img-circle">
  </div>

  <div class = "col-md-6" >
    <div class = "posts" ng-repeat="post in posts" ng-controller = "PostsController" >
      <div ng-click = 'selectPost(post)' ng-hide = "post === selectedPost">
        <h4>{{post.user.name}}</h4>
        <p>{{post.summary}}</p>
      </div>
      <div  ng-click = "clearSelectedPost()" ng-show="post === selectedPost">
        <h4>{{post.title}}</h4>
        <p>
          Added by: {{post.user.name}}
        </p>
        <p>
          Servings: {{post.servings}}
        </p>
        <p>
          Instructions: {{post.method}}
        </p>
        <p>
          Course: {{post.course.name}}
        </p>
        <p> 
          Category: {{post.category.name}}
        </p>
      </div>
    </div>
  </div>

  <div ng-controller = "CategoryController" class = " user_box col-md-3" >
    <img src="#" class = "img-circle ">

    <div ng-repeat="category in $root.categories">
      <h4>{{category.name}}</h4>
    </div>
  </div>
</div>