app.directive('postTabs', function(){
  return {
    restrict: 'A',
    replace: true,
    templateUrl: "<%=asset_path('post-tabs.html')%>",
    controller: function(){
      this.tab = 1;
      this.selectTab = function(currentTab){
        this.tab = currentTab;
      }; 
      this.isSelected = function(currentTab){
        return this.tab === currentTab;
      };
    },
    controllerAs: 'tabs'
  };
});