var app = angular.module('potLuckApp', ['ngAnimate', 'ngRoute']);

app.filter("customFilter", function(){
    return function(input, searchText){
         var returnArray = [];
         var searchTextSplit = searchText.toLowerCase().split(' ');
        for(var x = 0; x < input.length; x++){
             var count = 0;
            for(var y = 0; y < searchTextSplit.length; y++){
                if(input[x].toLowerCase().indexOf(searchTextSplit[y]) !== -1){
                    count++;
                }
            }
            if(count == searchTextSplit.length){
                 returnArray.push(input[x]);   
            }
        }
        return returnArray;
    }
});
function HomeController($scope){
    $scope.data = []
}


app.config(function($routeProvider, $locationProvider){
  $routeProvider.when('/', {
    controller: 'HomeController',
    templateUrl: "<%= asset_path('list.html')%>"
  });

  $routeProvider.when('/users/login', {
    controller: 'HomeController',
  });
  $routeProvider.when('/users/sign_up', {
    controller: 'HomeController',
  });
  $routeProvider.when('/users/edit', {
    controller: 'HomeController',
  });

  $locationProvider.html5Mode(true);
  $routeProvider.otherwise({
    redirectTo: '/'
  });

});

